@model CourseVM
@{
    ViewData["Title"] = "Delete";
}
@section css{
<link rel="stylesheet" href="~/assets/css/custom.css" />
<link rel="stylesheet" href="~/assets/css/student.css" />

}

<h2>Delete Course </h2>

<input type="hidden" asp-for="CourseId" />

<form class="create" asp-controller="Course" asp-action="Delete" method="post"  >
    <div class="form-group">
        <label asp-for="Name"> Course Name:</label><br />
        <input type="text" asp-for="Name"  class="form-control"  disabled/>
        <br />
        <div class="text-danger font-weight-bold" >
            <span asp-validation-for="Name"></span>
        </div>

    </div>
       <div class="form-group">
        <label asp-for="hours">  Cours Hours:</label><br />
        <input type="number" asp-for="hours"  class="form-control"  disabled/>
        <br />
        <div class="text-danger font-weight-bold" >
            <span asp-validation-for="hours"></span>
        </div>

    </div>
   <div class="form-group">
        <label asp-for="TeacherId"> Choose Course Lecturer:</label><br />
       <select disabled asp-for="TeacherId" asp-items="(SelectList)ViewBag.teachers" class="form-control" style="background-color: white;color: black;">
       <option >
           Select Teacher
       </option>

       </select>
        <br />
        <div class="text-danger font-weight-bold" >
            <span asp-validation-for="TeacherId"></span>
        </div>

    </div>
       
      
   
    <center>
        <div style="margin-top:-10px;">
        <button type="submit" class="btn btn-danger" >Delete</button>
        <a asp-controller="Course" asp-action="Index" class="btn btn-success">Back To Home</a>
        </div>
    </center>
</form>
@section js{
    <script src="~/jquery/jquery.js"></script>
    <script src="~/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}


