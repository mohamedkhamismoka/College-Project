@model TeacherVM
@{
    ViewData["Title"] = "Details";
}
@section css{
<link rel="stylesheet" href="~/assets/css/custom.css" />
<link rel="stylesheet" href="~/assets/css/student.css" />

}

<h2> Teacher Data </h2>



<form class="create" asp-controller="Teacher" asp-action="Create" method="post" enctype="multipart/form-data" >
    <div class="form-group">
        <label asp-for="Name">  Teacher Name:</label><br />
        <input type="text" asp-for="Name"  class="form-control" readonly />
        

    </div>
       <div class="form-group">
        <label asp-for="address">  Teacher Address:</label><br />
        <input type="text" asp-for="address"  class="form-control" readonly />
      
    </div>
       <div class="form-group">
        <label asp-for="phone">  Teacher phone:</label><br />
        <input type="phone" asp-for="phone"  class="form-control" readonly />
       

    </div>
       <div class="form-group">
        <label asp-for="mail">  Teacher mail:</label><br />
        <input type="text" asp-for="mail"  class="form-control" readonly />
       

    </div>



       <div class="form-group">
        <label asp-for="BirthDate">  Teacher Birthdate:</label><br />
        <input type="date" asp-for="BirthDate"  class="form-control" readonly />
      </div>
         <div class="form-group">
        <label asp-for="img">  Teacher image:</label><br />
            <img src="~/images/@Model.imgname" class="img-thumbnail" width=200 height=200 />
  
    </div>
    




      <div class="form-group">
        <label asp-for="DepartmentId"> Choose Teacher Department:</label><br />
       <select asp-for="DepartmentId" asp-items="(SelectList)ViewBag.departments" class="form-control" style="background-color: white;color: black;" disabled>
       <option >
           Select Department
       </option>

       </select>
       

    </div>

                  <div class="form-group">
        <label asp-for="cv">  Teacher CV:</label><br />
     <a  class="btn btn-success" style="height:36px"  asp-controller="Teacher" asp-action="Download" asp-route-filename="@Model.Cvname" > <p style="margin-top:5px">Download CV</p> </a>
      
    </div>
    <center>
        <div style="margin-top:-10px;">
  
        <a asp-controller="Teacher" asp-action="Index" class="btn btn-success">Back To Home</a>
        </div>
    </center>
</form>


