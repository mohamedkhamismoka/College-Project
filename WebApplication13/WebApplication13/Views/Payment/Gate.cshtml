@{
    ViewData["Title"] = "Choose Action";
}
@section css{
<link rel="stylesheet" href="~/assets/css/custom.css" />
<link rel="stylesheet" href="~/assets/css/student.css" />
<style>
    body{
       overflow-y:hidden
    }
</style>
}

<div  class="create container ">
    <h3 class="text-center text-danger" style="margin-bottom:10px">@TempData["error"] </h3>
    <div class="row" >
        <div class="col-lg-10">
            <div class="update">
                <img src="~/images/upd.jfif"  style="width:100%;height:150px"/>
                  <form  asp-controller="Payment"  asp-action="update" method="get" style="width:100%">
                    <input type="text"  name="payid" placeholder="Payment id to update"/>
                     <button class="btn btn-danger" type="submit" > Update</button>
                </form>
            </div>
        </div>
        <br />
        <br />
          <div class="col-lg-10" style="margin-top:20px">
                 <div class="Deatils">
                <img src="~/images/det.jfif"  style="width:100%;height:150px"/>
                <form  asp-controller="Payment"  asp-action="Details" method="get" style="width:100%">
                    <input type="text"  placeholder="Payment id to get details" name="payid"/>
                     <button class="btn btn-danger" type="submit" > Get Details</button>
                </form>
               
            </div>
        </div>

    </div>

</div>



