@model DepartmentVM
@{
    ViewData["Title"] = "Create";
}
@section css{
<link rel="stylesheet" href="~/assets/css/custom.css" />
<style>
    h2 {
 position:absolute;
left:50%;
transform:translate(-50%);
   
    color: red;
}

.create {
    margin-top:50px;

    width: 600px;
    position: absolute;
    height:800px;
    left: 50%;
    transform: translate(-50%,0)
}
.page-body-wrapper{
    height:800px;
}
.main-panel{
    height:800px
}
body{
    overflow-y:scroll
