}

<h2>Delete Department </h2>



<form class="create" asp-controller="Department" asp-action="Delete" method="post"  >
  <input type="hidden" asp-for="DepartmentId" />


     
    <div class="form-group">
        <label asp-for="Name"> Department Name:</label><br />
        <input type="text" asp-for="Name"  class="form-control" disabled />
        <br />
        <div class="text-danger font-weight-bold" >
            <span asp-validation-for="Name"></span>
        </div>


        </div>
          <center>
        <div style="margin-top:-25px;">
        <button type="submit" class="btn btn-primary">Delete</button>
        <a asp-controller="Department" asp-action="Index" class="btn btn-success">Back To Home</a>
        </div>
    </center>
        </form>


